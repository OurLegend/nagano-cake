<header class="border-bottom border-dark">
  <div class="container">
    <nav class="navbar navbar-expand-lg">
      <%= link_to public_root_path do %>
        <%= image_tag 'logo2.jpg', style: "width: 220px;" %>
      <% end %>
      <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <!--customerログイン時-->
          <li><%= link_to "マイページ", public_customers_path, class: "btn border rounded ml-5" %></li>
          <li><%= link_to "商品一覧", public_items_path, class: "btn border rounded ml-5" %></li>
          <li><%= link_to "カート", public_cart_items_path, class: "btn border rounded ml-5" %></li>
          <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn border rounded ml-5" %></li>
        <% else %>
          <!--customerログアウト時-->
          <li><%= link_to "About", public_about_path, class: "btn border rounded ml-5" %></li>
          <li><%= link_to "商品一覧", public_items_path, class: "btn border rounded ml-5" %></li>
          <li><%= link_to "新規登録", new_customer_registration_path, class: "btn border rounded ml-5" %></li>
          <li><%= link_to "ログイン", new_customer_session_path, class: "btn border rounded ml-5" %></li>
        <% end %>
      </ul>
    </nav>
    <!--検索フォーム（検索機能追加時修正）-->
    <div class="text-right mt-n4">
      <%= form_with do |f| %>
        <%= f.text_field :content, placeholder: "Search" %>
        <%= button_tag '<i class="fa fa-search"></i>'.html_safe, :type => "submit",:class =>"btn btn-default btn-s-md" %>
      <% end %>
    </div>
  </div>
</header>