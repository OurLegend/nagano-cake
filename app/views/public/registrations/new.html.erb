<div style="width: 800px; margin: 30px auto;">
  <h5 style="width: 160px; text-align: center; background-color: lightgray;">新規会員登録</h5>

  <br>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :first_name, '名前　　　　　　　　　　　（姓）　' %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      <%= f.label :last_name, '　　（名）　' %>
      <%= f.text_field :last_name, autocomplete: "last_name" %>
    </div>

    <br>

    <div class="field">
      <%= f.label :first_name_kana, 'フリガナ　　　　　　　　　（セイ）' %>
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
      <%= f.label :last_name_kana, '　　（メイ）' %>
      <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
    </div>

    <br>

    <div class="field">
      <%= f.label :email, 'メールアドレス　　　　　　　　　　' %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <br>

    <div class="field">
      <%= f.label :postcode, '郵便番号（ハイフンなし）　　　　　' %>
      <%= f.text_field :postcode, autocomplete: "postcode" %>
    </div>

     <br>

    <div class="field">
      <%= f.label :address, '住所　　　　　　　　　　　　　　　' %>
      <%= f.text_field :address, autocomplete: "address", size: 60 %>
    </div>

    <br>

    <div class="field">
      <%= f.label :phone_number, '電話番号（ハイフンなし）　　　　　' %>
      <%= f.telephone_field :phone_number, autocomplete: "phone_number" %>
    </div>

    <br>

    <div class="field">
      <%= f.label :password, 'パスワード（６文字以上）　　　　　' %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <br>

    <div class="field">
      <%= f.label :password_confirmation, 'パスワード（確認用）　　　　　　　' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <br>

    <div class="actions">　　　　　　　　　　　　　　　　　<%= f.submit "新規登録", class: "btn btn-success" %>
    </div>

  <% end %>


  <h5 style="width: 200px; text-align: center; background-color: lightgray;">既に登録済みの方</h5>

  <br>

  <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
</div>