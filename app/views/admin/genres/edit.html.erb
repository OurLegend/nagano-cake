<div class = "container px-5 px-sm-0">
  <div class = "row">
    <h4>ジャンル編集</h4>
    <% if @genre.errors.any? %>
      <ul class="alert alert-danger" role="alert">
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <table class = 'table'>
      <tbody>
        <tr>
          <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
          <td><%= f.label :name, 'ジャンル名', class: 'font-weight-bold' %></td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '変更を保存', class: 'btn btn-success' %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
