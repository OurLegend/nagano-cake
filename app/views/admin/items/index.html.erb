<div class = "container">
  <h4 style = "width: 100px; background-color: lightgray;">商品一覧</h4>
  <div align = "right">
    <%= link_to new_admin_item_path, class: "btn-circle-3d" do %>
      <i class="fa fa-plus"></i>
    <% end %></div>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= number_with_delimiter(item.unit_price) %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? '販売中':'販売停止中' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @items %>
</div>
