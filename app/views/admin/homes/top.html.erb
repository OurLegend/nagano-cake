<div class="container">
  <div class="row">
    <h4>注文履歴一覧</h4>
    <% @orders.each do |order| %>
      <h5>購入日時</h5>
      <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %>
      <h5>購入者</h5>
      <%= order.customer.full_name %>
      <h5>注文個数</h5>
      <%= order.order_details.sum(:amount) %>
      <h5>注文ステータス</h5>
      <%= order.status_i18n %>
    <% end %>
  </div>
</div>

<%= paginate @orders %>
