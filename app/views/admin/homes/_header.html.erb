<header class="border-bottom border-dark">
  <div class="container">
    <nav class="navbar navbar-expand-lg">
      <%= link_to admin_root_path do %>
        <h3 class="border border-dark py-1 px-5 mt-5 text-dark">LOGO</h3>
      <% end %>  
      <ul class="navbar-nav ml-auto">
        <li><%= link_to '商品一覧', admin_items_path, class: 'btn border roundbed ml-5' %></li>
        <li><%= link_to '会員一覧', admin_customers_path, class: 'btn border roundbed ml-5' %></li>
        <li><%= link_to '注文履歴一覧', admin_root_path, class: 'btn border roundbed ml-5' %></li>
        <li><%= link_to 'ジャンル一覧', admin_genres_path, class: 'btn border roundbed ml-5' %></li>
