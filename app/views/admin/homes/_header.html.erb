<header class="border-bottom border-dark navbar-light", style="background-color: #FFFFCC;">
  <div class="container">
    <nav class="navbar navbar-expand-lg">
      <%= link_to admin_root_path do %>
        <%= image_tag 'logo2vr2.jpg', style: "width: 220px;" %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li><%= link_to '商品一覧', admin_items_path, class: 'btn border roundbed ml-5 text-white', style: 'background-color: #d2b48c;' %></li>
            <li><%= link_to '会員一覧', admin_customers_path, class: 'btn border roundbed ml-5 text-white', style: 'background-color: #d2b48c;' %></li>
            <li><%= link_to '注文履歴一覧', admin_root_path, class: 'btn border roundbed ml-5 text-white', style: 'background-color: #d2b48c;' %></li>
            <li><%= link_to 'ジャンル一覧', admin_genres_path, class: 'btn border roundbed ml-5 text-white', style: 'background-color: #d2b48c;' %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'btn border roundbed ml-5 text-white',  style: 'background-color: #d2b48c;' %></li>
          </ul>
        </div>  
    </nav>
    <div class="text-right mt-n4">
      <%= form_with do |f| %>
        <%= f.text_field :content, placeholder: "Search" %>
        <%= button_tag '<i class="fa fa-search"></i>'.html_safe, :type => "submit",:class =>"btn btn-default btn-s-md" %>
      <% end %>
    </div>
  </div>
</header>