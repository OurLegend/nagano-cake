<div class="container">
  <div>
    <h5 style="width: 300px; background-color: lightgray;"><%= "#{@customer.full_name} さんの会員詳細" %></h5>
  </div>    
  <table class="table">
    <tr>
      <td>会員ID</td>  
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>  
      <td><%= @customer.first_name %><%= @customer.last_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>  
      <td><%= @customer.postcode %></td>
    </tr>
    <tr>
      <td>住所</td>  
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>  
      <td><%= @customer.phone_number %></td>
    </tr>       
    <tr>
      <td>メールアドレス</td>  
      <td><%= @customer.email %></td>
    </tr>       
    <tr>
      <td>会員ステータス</td>  
      <td><%= @customer.is_deleted %></td>
    </tr>       
  </table>
  <div class="row">
    <%= link_to "編集", edit_admin_customer_path(@customer), class: "btn btn-success" %>
  </div>
</div>
 
 
