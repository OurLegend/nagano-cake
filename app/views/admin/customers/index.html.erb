<h1>会員一覧</h1>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>      
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer.id) do %>      
              <%= customer.full_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td><% if customer.is_deleted == false %>
                <strong class="text-success"><%= "有効" %></strong>
              <% else %>
                <strong class= "text-secondary"><%= "退会" %></strong> 
              <% end %>  
          </td>
        </tr>
      <% end %>    
    </tbody>
  </table>
